#!/usr/bin/env node

const { _ = '' } = process.env;

let useBabelNode = _.endsWith('babel-node');

if (useBabelNode) {
	try { require.resolve('../src/monitor'); }
	catch (err) { useBabelNode = false; }
}

if (useBabelNode) {
	require('babel-register')();
	require('../src/monitor');
}
else {
	require('../lib/monitor');
}
