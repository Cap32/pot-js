	"version": "0.0.0-beta.50",
	"scripts": {
		"start": "yarn cli start ./test/fixtures/socket",
		"test": "cross-env POT_DEV=true jest --runInBand",
		"test:server": "yarn cli start ./test/fixtures/server",
		"cli": "cross-env POT_DEV=true ./bin/pot",
